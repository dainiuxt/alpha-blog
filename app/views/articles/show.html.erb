<div class="container">
<h2 class="text-center text-success"><%= @article.title %></h2>

<div class="row justify-content-md-center">
	<div class="col-8">
<div class="card text-center mt-4 shadow nb5 bg-white rounded">
  <div class="card-header">
    created by <%= @article.user.username %>
    <%= link_to gravatar_for(@article.user), user_path(@article.user) %>
  </div>
  <div class="card-body">
    <div class="card-text text-left"><%= simple_format(@article.description) %></div>
    <% if logged_in? && @article.user == current_user %>
 	<%= link_to 'Edit', edit_article_path, class: "btn btn-outline-secondary"%>
	<%= link_to 'Delete', article_path, method: :delete, data: { confirm: "Ary you sure?" }, class: "btn btn-outline-danger"%>
  <% end %>
  </div>
  <div class="card-footer text-muted">
    <small>Created <%= time_ago_in_words(@article.created_at) %> ago, modified <%= time_ago_in_words(@article.updated_at) %> ago</small>
  </div>
</div>
</div>
</div>
</div>